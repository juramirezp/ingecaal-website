---
// Contacto component for landing page
import { Icon } from "astro-icon/components";
---

<section
  id="contacto"
  class="py-16 md:py-28 bg-gradient-to-b from-white to-gray-100"
>
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2
        class="text-2xl md:text-3xl font-bold font-heading mb-6 underline-title underline-center text-gray-600"
      >
        ¿Tienes un proyecto en mente?
      </h2>
      <p class="text-lg text-gray-700 max-w-3xl mx-auto">
        Contáctanos y te ayudaremos a encontrar la mejor solución para tus
        necesidades.
      </p>
    </div>

    <div class="max-w-5xl mx-auto flex flex-col md:flex-row md:gap-4 lg:gap-10">
      <!-- Información de contacto -->
      <div class="w-full md:w-1/3 bg-white p-4 lg:p-8 rounded-lg shadow-md">
        <h3
          class="text-xl font-bold text-gray-600 underline-title after:!w-[80%] after:!h-[2px] mb-8"
        >
          Información de contacto
        </h3>

        <div class="space-y-6">
          <div class="flex items-start">
            <div class="bg-primary rounded-full p-3 md:p-1.5 lg:p-3 mr-4">
              <Icon name="solar:letter-outline" class="text-white text-2xl" />
            </div>
            <div>
              <h4 class="text-md font-semibold">Correo electrónico</h4>
              <a
                href="mailto:ventas@ingecaal.cl"
                class="text-gray-700 text-sm hover:text-primary transition-colors block"
                >ventas@ingecaal.cl</a
              >
              <a
                href="mailto:ingecaal@ingecaal.cl"
                class="text-gray-700 text-sm hover:text-primary transition-colors block"
                >ingecaal@ingecaal.cl</a
              >
            </div>
          </div>

          <div class="flex items-start">
            <div class="bg-primary rounded-full p-3 md:p-1.5 lg:p-3 mr-4">
              <Icon
                name="solar:phone-calling-outline"
                class="text-white text-2xl"
              />
            </div>
            <div>
              <h4 class="text-md font-semibold">Teléfono</h4>
              <a
                href="tel:+56225261716"
                class="text-gray-700 text-sm hover:text-primary transition-colors block"
                >+56 2 2526 1716</a
              >
              <a
                href="tel:+56225254809"
                class="text-gray-700 text-sm hover:text-primary transition-colors block"
                >+56 2 2525 4809</a
              >
            </div>
          </div>

          <div class="flex items-start">
            <div class="bg-primary rounded-full p-3 md:p-1.5 lg:p-3 mr-4">
              <Icon
                name="solar:clock-circle-linear"
                class="text-white text-2xl"
              />
            </div>
            <div>
              <h4 class="text-md font-semibold">Horario</h4>
              <p class="text-gray-700 text-sm">8:30 a 13:00 hrs.</p>
              <p class="text-gray-700 text-sm">14:00 a 18:30 hrs.</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="bg-primary rounded-full p-3 md:p-1.5 lg:p-3 mr-4">
              <Icon
                name="solar:point-on-map-linear"
                class="text-white text-2xl"
              />
            </div>
            <div>
              <h4 class="text-ms font-semibold">Ubicación</h4>
              <a
                href="https://maps.app.goo.gl/WLt1KVzsoNVuPjZ17"
                class="text-gray-700 text-sm hover:text-primary transition-colors block"
              >
                <p>Fuenzalida Urrejola 1147</p>
                <p>La Cisterna, Santiago</p>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Formulario de contacto -->
      <div class="w-full md:w-2/3 bg-white p-4 lg:p-8 rounded-lg shadow-md">
        <h3
          class="text-xl font-bold text-gray-600 underline-title after:!w-[80%] after:!h-[2px] mb-8"
        >
          Envíanos un mensaje
        </h3>

        <form id="contact-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                for="nombre"
                class="block text-gray-700 font-medium mb-1 text-sm"
                >Nombre *</label
              >
              <input
                type="text"
                id="nombre"
                name="nombre"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
              />
            </div>

            <div>
              <label
                for="empresa"
                class="block text-gray-700 font-medium mb-1 text-sm"
                >Empresa <span class="text-xs">(opcional)</span></label
              >
              <input
                type="text"
                id="empresa"
                name="empresa"
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label
                for="email"
                class="block text-gray-700 font-medium mb-1 text-sm"
                >Correo electrónico *</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
              />
            </div>

            <div>
              <label
                for="telefono"
                class="block text-gray-700 font-medium mb-1 text-sm"
                >Teléfono *</label
              >
              <input
                type="tel"
                id="telefono"
                name="telefono"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
              />
            </div>
          </div>

          <div>
            <label
              for="mensaje"
              class="block text-gray-700 font-medium mb-1 text-sm"
              >Mensaje / descripción del proyecto *</label
            >
            <textarea
              id="mensaje"
              name="mensaje"
              rows="5"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
            ></textarea>
          </div>

          <div class="text-center">
            <button
              type="submit"
              class="bg-primary hover:bg-accent text-white font-bold py-3 px-8 rounded-md transition duration-300 ease-in-out transform hover:scale-105"
            >
              Enviar mensaje
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  // Importar el servicio de email
  import { enviarEmail } from "../utils/emailService.js";

  // Script para manejar el envío del formulario
  document.addEventListener("DOMContentLoaded", () => {
    const contactForm = document.getElementById("contact-form");
    const submitButton = contactForm?.querySelector('button[type="submit"]');
    let buttonOriginalText = "";

    if (submitButton) {
      buttonOriginalText = submitButton.innerHTML;
    }

    if (contactForm) {
      contactForm.addEventListener("submit", async (e) => {
        e.preventDefault();

        // Deshabilitar el botón y mostrar estado de carga
        if (submitButton) {
          submitButton.disabled = true;
          submitButton.innerHTML = "Enviando...";
        }

        try {
          // Recopilar datos del formulario
          const formData = new FormData(contactForm);
          const formValues = Object.fromEntries(formData.entries());

          // Enviar email usando el servicio de email del cliente
          const result = await enviarEmail(formValues);

          if (result.success) {
            // Mensaje de éxito
            alert("¡Gracias por contactarnos! Te responderemos a la brevedad.");
            contactForm.reset();
          } else {
            // Mensaje de error
            alert(
              `Error: ${result.message || "Hubo un problema al enviar el mensaje. Por favor, intenta nuevamente."}`,
            );
          }
        } catch (error) {
          console.error("Error al enviar el formulario:", error);
          alert(
            "Hubo un problema al enviar el mensaje. Por favor, intenta nuevamente.",
          );
        } finally {
          // Restaurar el botón
          if (submitButton) {
            submitButton.disabled = false;
            submitButton.innerHTML = buttonOriginalText;
          }
        }
      });
    }
  });
</script>
