---
// FaqItem.astro - Componente reutilizable para preguntas frecuentes

interface Props {
  pregunta: string;
  respuesta: string;
  categoria: string;
  numero?: number; // Opcional para numerar las preguntas
}

const { pregunta, respuesta, numero, categoria } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <button
    class="faq-toggle w-full flex justify-between items-center p-4 focus:outline-none"
  >
    <div class="flex flex-col items-start">
      <span class="text-xs text-gray-400">{categoria}</span>
      <h3 class="text-md text-gray-600 font-bold text-left mt-2">
        {numero ? `${numero}. ` : ""}{pregunta}
      </h3>
    </div>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6 text-gray-700 faq-icon transition-transform duration-300"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>
  <div class="faq-content px-5 pb-5 hidden">
    <p class="text-gray-700 text-sm">
      {respuesta}
    </p>
  </div>
</div>
